<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
  <div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to 'Flixter', root_path, class:"navbar-brand" %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'See All Courses', courses_path, class:"nav-link" %>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'My Dashboard', dashboard_path %>
            </li>
            <li class="nav-item">
              <%= link_to 'My Profile', user_path(current_user), class: 'nav-link' %>  
            </li>
            <li class="nav-item">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>  
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </div>

  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
          <b>Teachers</b>
          <br />
          <%= link_to 'Teach a Course', new_instructor_course_path %>
          <br />
          <%= link_to 'My Dashboard', dashboard_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>About</b>
          <br />
          <%= link_to 'Team', '#' %>
          <br />
          <%= link_to 'Careers', '#' %>
          <br />
          <%= link_to 'Privacy Policy', '#' %>
        </div>
        <div class="col-12 col-sm-3">
          <b>Contact</b>
          <br />
          zac@egghead.io
          <br />
          11618 NE 9th Ct
          <br />
          Vancouver WA, 98685
        </div>
        <div class="col-12 col-sm-3 social">
          <b>Social</b>
          <br />
          <br />
          <%= link_to 'http://githubcom/zacjones93' do%>
            <span class="fa fa-github-square fa-2x social-button"></span>
          <% end %>
          <span class="fa fa-facebook-square fa-2x social-button"></span>
          <span class="fa fa-twitter-square fa-2x social-button"></span>
        </div>
      </div>
    </div>
    
  </div>


    <script src="https://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
